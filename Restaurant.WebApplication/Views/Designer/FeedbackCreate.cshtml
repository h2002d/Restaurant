@model Restaurant.WebApplication.ViewModels.FeedbackViewModel

@{
    ViewData["Title"] = "FeedbackCreate";
}

<h2>FeedbackCreate</h2>

<h4>FeedbackViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FeedbackCreate" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="ImagePath" class="form-control" />
            <div class="form-group">
                @if (Model != null)
                {
                    <img src="@Model.ImagePath" style="width:250px;height:250px;" />
                }
                <input asp-for="Image" class="form-control" accept="image/x-png,image/gif,image/jpeg" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

